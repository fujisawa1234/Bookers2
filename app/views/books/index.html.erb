<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

      <table class="table">
        <tbody>
          <tr></tr>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          
        </tbody>
      </table>

      <div class="row">
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block", method: :get do %>
          <i class="fa-solid fa-user-gear"></i>
        <%end%>
      </div>
    </div>
  </div>
</div>